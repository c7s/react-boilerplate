{
    "name": "react-boilerplate-frontend",
    "version": "0.0.0",
    "author": "c7s",
    "private": true,
    "scripts": {
        "i": "yarn install --frozen-lockfile",
        "a": "yarn add -T -D",
        "r": "yarn remove",
        "start": "start http://localhost:3005 & node ./src/dev-server",
        "build": "webpack",
        "prettier:all": "prettier --write \"**/*.{js,ts,tsx,json,graphql,md,*rc}\"",
        "preparecommitmsg": "node ./git/hooks/prepare-commit-msg",
        "commitmsg": "node ./git/hooks/commit-msg",
        "precommit": "yarn check --integrity && tsc --project tsconfig.json && lint-staged",
        "postcommit": "git update-index --again"
    },
    "lint-staged": {
        "gitDir": "../",
        "*.js": [
            "eslint"
        ],
        "*.{ts,tsx}": [
            "tslint -t stylish --project tsconfig.json"
        ],
        "*.{js,ts,tsx,json,graphql,md,*rc}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "@babel/core": "~7.0.0",
        "@babel/plugin-proposal-decorators": "~7.0.0",
        "@babel/preset-env": "~7.0.0",
        "@babel/preset-react": "~7.0.0",
        "@babel/preset-typescript": "~7.0.0",
        "@types/react": "~16.4.13",
        "@types/react-dom": "~16.0.7",
        "autobind-decorator": "~2.1.0",
        "babel-loader": "~8.0.0",
        "babel-plugin-add-react-displayname": "~0.0.5",
        "eslint": "~5.4.0",
        "eslint-config-airbnb": "~17.1.0",
        "eslint-config-prettier": "~3.0.1",
        "eslint-plugin-import": "~2.14.0",
        "eslint-plugin-jsx-a11y": "~6.1.1",
        "eslint-plugin-react": "~7.11.1",
        "husky": "~0.14.3",
        "lint-staged": "~7.2.2",
        "prettier": "~1.14.2",
        "react": "~16.4.2",
        "react-dom": "~16.4.2",
        "react-hot-loader": "~4.3.5",
        "time-fix-plugin": "~2.0.3",
        "tslint": "~5.11.0",
        "tslint-config-airbnb": "~5.10.0",
        "tslint-config-prettier": "~1.15.0",
        "typescript": "~3.0.3",
        "webpack-command": "~0.4.1"
    },
    "dependencies": {
        "express": "~4.16.3",
        "webpack": "~4.17.1",
        "webpack-dev-middleware": "~3.2.0",
        "webpack-hot-middleware": "~2.22.3",
        "webpack-hot-server-middleware": "~0.5.0"
    }
}
