{
    "name": "react-boilerplate-frontend",
    "version": "0.0.0",
    "author": "c7s",
    "private": true,
    "scripts": {
        "i": "yarn install --frozen-lockfile",
        "a": "yarn add -T -D",
        "r": "yarn remove",
        "start": "start http://localhost:3005 & node ./src/dev-server",
        "build": "webpack",
        "prettier:all": "prettier --write \"**/*.{js,ts,tsx,json,graphql,md,*rc}\"",
        "generate:apollo-initial": "yarn run generate:apollo-schema && yarn run generate:apollo-config",
        "generate:apollo-incremental": "yarn run generate:apollo-types && yarn run generate:apollo-assembled",
        "generate:apollo-schema": "node ./generators/apollo/schema",
        "generate:apollo-config": "node ./generators/apollo/config",
        "generate:apollo-types": "node ./generators/apollo/types",
        "generate:apollo-assembled": "node ./generators/apollo/assembled",
        "lint:js": "eslint .",
        "lint:ts": "tslint -t codeFrame --project tsconfig.json ./src/**/*.{ts,tsx} && tsc --project tsconfig.json",
        "lint:css": "stylelint ./src/**/*.{ts,tsx}",
        "preparecommitmsg": "node ./git/hooks/prepare-commit-msg",
        "commitmsg": "node ./git/hooks/commit-msg",
        "precommit": "yarn check --integrity && tsc --project tsconfig.json && lint-staged",
        "postcommit": "git update-index --again"
    },
    "lint-staged": {
        "gitDir": "../",
        "*.js": [
            "eslint"
        ],
        "*.{ts,tsx}": [
            "tslint -t codeFrame --project tsconfig.json"
        ],
        "./src/**/*.{tsx,ts}": [
            "stylelint"
        ],
        "*.{js,ts,tsx,json,graphql,md,*rc}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "@babel/core": "~7.0.0",
        "@babel/plugin-proposal-decorators": "~7.0.0",
        "@babel/preset-env": "~7.0.0",
        "@babel/preset-react": "~7.0.0",
        "@babel/preset-typescript": "~7.0.0",
        "@types/fontfaceobserver": "~0.0.6",
        "@types/node-fetch": "~2.1.2",
        "@types/react": "~16.4.13",
        "@types/react-dom": "~16.0.7",
        "@types/react-redux": "~6.0.7",
        "@types/react-router-dom": "~4.3.0",
        "@types/recompose": "~0.26.4",
        "@types/redux-localstorage": "~1.0.8",
        "@types/redux-localstorage-filter": "~0.1.4",
        "@types/svg-sprite-loader": "~3.9.0",
        "@types/webpack-env": "~1.13.6",
        "apollo-cache-inmemory": "~1.2.9",
        "apollo-client": "~2.4.1",
        "apollo-link": "~1.2.2",
        "apollo-link-http": "~1.5.4",
        "autobind-decorator": "~2.1.0",
        "babel-loader": "~8.0.0",
        "babel-plugin-add-react-displayname": "~0.0.5",
        "babel-plugin-styled-components": "~1.6.3",
        "clean-webpack-plugin": "~0.1.19",
        "css-loader": "~1.0.0",
        "eslint": "~5.4.0",
        "eslint-config-airbnb": "~17.1.0",
        "eslint-config-prettier": "~3.0.1",
        "eslint-plugin-import": "~2.14.0",
        "eslint-plugin-jsx-a11y": "~6.1.1",
        "eslint-plugin-react": "~7.11.1",
        "file-loader": "~2.0.0",
        "fontfaceobserver": "~2.0.13",
        "graphql": "~0.13.0",
        "graphql-tag": "~2.9.2",
        "husky": "~0.14.3",
        "lint-staged": "~7.2.2",
        "node-fetch": "~2.2.0",
        "node-noop": "~1.0.0",
        "prettier": "~1.14.2",
        "react": "~16.4.2",
        "react-apollo": "~2.1.11",
        "react-dom": "~16.4.2",
        "react-hot-loader": "~4.3.5",
        "react-redux": "~5.0.7",
        "react-router-dom": "~4.3.1",
        "redux": "~4.0.0",
        "redux-devtools-extension": "~2.13.5",
        "redux-localstorage": "~1.0.0-rc5",
        "redux-localstorage-filter": "~0.1.1",
        "styled-components": "~3.4.5",
        "stylelint": "~9.5.0",
        "stylelint-config-standard": "~18.2.0",
        "stylelint-config-styled-components": "~0.1.1",
        "stylelint-processor-styled-components": "~1.3.2",
        "svg-sprite-loader": "~3.9.2",
        "time-fix-plugin": "~2.0.3",
        "to-string-loader": "~1.1.5",
        "tslint": "~5.11.0",
        "tslint-config-airbnb": "~5.10.0",
        "tslint-config-prettier": "~1.15.0",
        "typescript": "~3.0.3",
        "typescript-fsa": "~3.0.0-beta-2",
        "typescript-fsa-reducers": "~0.4.5",
        "unused-webpack-plugin": "~2.0.0",
        "webpack-command": "~0.4.1",
        "webpack-merge": "~4.1.4"
    },
    "dependencies": {
        "@types/lodash": "~4.14.116",
        "apollo-codegen": "~0.20.2",
        "commander": "~2.17.1",
        "express": "~4.16.3",
        "glob": "~7.1.3",
        "loader-utils": "~1.1.0",
        "lodash": "~4.17.10",
        "webpack": "~4.17.1",
        "webpack-dev-middleware": "~3.2.0",
        "webpack-hot-middleware": "~2.22.3",
        "webpack-hot-server-middleware": "~0.5.0"
    }
}
