{
    "extends": ["tslint-config-airbnb", "tslint-config-prettier"],
    "rules": {
        "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"],
        "import-name": false,
        "strict-boolean-expressions": [
            true,
            "allow-null-union",
            "allow-undefined-union",
            "allow-string",
            "allow-number",
            "allow-mix"
        ]
    }
}
