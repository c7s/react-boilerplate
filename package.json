{
  "name": "react-boilerplate",
  "version": "0.0.0",
  "author": "c7s",
  "private": true,
  "scripts": {
    "i": "yarn install --frozen-lockfile",
    "a": "yarn add -T -D",
    "r": "yarn remove",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "{package.json,yarn.lock}": [
      "node ./tools/git/hooks/check-yarn-lock",
      "node ./tools/git/hooks/check-package-json"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "lerna run prepare-commit-msg",
      "commit-msg": "lerna run commit-msg",
      "pre-commit": "lerna run pre-commit",
      "post-commit": "lerna run post-commit"
    }
  },
  "devDependencies": {
    "husky": "~1.2.0",
    "lerna": "^3.5.0",
    "lint-staged": "~8.1.0"
  }
}
