{
    "name": "c7s-react-boilerplate",
    "version": "0.0.0",
    "author": "c7s",
    "private": true,
    "scripts": {
        "i": "yarn install --frozen-lockfile",
        "a": "yarn add -T -D",
        "r": "yarn remove",
        "precommit": "yarn check --integrity && lint-staged",
        "postcommit": "git update-index --again"
    },
    "lint-staged": {
        "./**/*.js": [
            "eslint"
        ],
        "{*.{js,ts,tsx,json,graphql,md},**/.*rc}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "eslint": "~5.4.0",
        "eslint-config-airbnb": "~17.1.0",
        "eslint-config-prettier": "~3.0.1",
        "husky": "~0.14.3",
        "lint-staged": "~7.2.2",
        "prettier": "~1.14.2"
    }
}
