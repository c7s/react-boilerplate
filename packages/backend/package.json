{
  "name": "node-api-boilerplate",
  "version": "0.0.0",
  "description": "A boilerplate for web APIs using Node",
  "main": "dist/index.js",
  "private": true,
  "engines": {
    "node": ">=8.x.x"
  },
  "scripts": {
    "migration:run": "yarn env typeorm migration:run",
    "migration:revert": "yarn env typeorm migration:revert",
    "migration:generate": "yarn env typeorm migration:generate -d 'src/infra/database/migrate' -n Migrations",
    "schema:drop": "yarn env typeorm schema:drop",
    "start": "yarn env node dist/index.js",
    "start:dev": "yarn build:dev --onSuccess \"yarn start\"",
    "clear": "rm -rf dist",
    "build": "yarn clear && yarn tsc",
    "build:dev": "tsc-watch --noClear",
    "lint": "eslint {src}/**/*.js",
    "env": "bin/environment"
  },
  "license": "MIT",
  "dependencies": {
    "awilix": "^4.2.0",
    "awilix-express": "^2.1.1",
    "body-parser": "^1.17.1",
    "cors": "^2.8.1",
    "express": "^4.15.2",
    "express-status-monitor": "^0.1.9",
    "http-status": "^1.3.1",
    "log4js": "^1.1.1",
    "morgan": "^1.8.1",
    "pg": "^6.1.3",
    "redis": "^2.8.0",
    "routing-controllers": "^0.7.7",
    "typeorm": "0.2.7"
  },
  "devDependencies": {
    "@types/events": "^1.2.0",
    "@types/express": "^4.16.0",
    "@types/http-status": "^0.2.30",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.18",
    "ts-node": "^7.0.1",
    "tsc-watch": "^1.1.35",
    "typescript": "^3.2.2"
  }
}
