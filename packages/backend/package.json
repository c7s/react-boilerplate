{
  "name": "node-api-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for web APIs using Node",
  "main": "dist/index.js",
  "private": true,
  "engines": {
    "node": ">=8.x.x"
  },
  "scripts": {
    "migration:run": "yarn env typeorm migration:run",
    "migration:revert": "yarn env typeorm migration:revert",
    "migration:generate": "yarn env typeorm migration:generate -d 'src/infra/database/migrate' -n Migrations",
    "schema:drop": "yarn env typeorm schema:drop",
    "build": "rm -rf dist && yarn tsc",
    "build:dev": "yarn build --watch",
    "start": "yarn env node dist/index.js",
    "start:dev": "concurrently --handle-input -n build,app \"yarn tsc --watch\" nodemon",
    "test": "npm run test:all",
    "test:all": "npm run test:unit && npm run test:features",
    "test:unit": "cross-env NODE_PATH=. NODE_ENV=test mocha --opts test/mocha.opts.unit",
    "test:features": "cross-env NODE_PATH=. NODE_ENV=test mocha --opts test/mocha.opts.features",
    "coverage": "cross-env NODE_PATH=. NODE_ENV=test nyc mocha --opts test/mocha.opts.unit",
    "lint": "eslint {src,test,config}/**/*.js",
    "console": "yarn env ts-node src/interfaces/console/index.ts",
    "cleanup": "node scripts/cleanup.js",
    "env": "bin/environment"
  },
  "repository": {},
  "author": "",
  "license": "MIT",
  "dependencies": {
    "awilix": "^3.0.9",
    "awilix-express": "^0.11.0",
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "cors": "^2.8.1",
    "cross-env": "^3.2.3",
    "del": "^2.2.2",
    "dotenv": "^4.0.0",
    "eslint": "^4.7.2",
    "express": "^4.15.2",
    "express-status-monitor": "^0.1.9",
    "http-status": "^1.0.1",
    "log4js": "^1.1.1",
    "method-override": "^2.3.7",
    "morgan": "^1.8.1",
    "pg": "^6.1.3",
    "pm2": "^2.4.2",
    "redis": "^2.8.0",
    "structure": "^1.2.0",
    "typeorm": "0.2.7"
  },
  "devDependencies": {
    "@types/events": "^1.2.0",
    "@types/express": "^4.16.0",
    "@types/http-status": "^0.2.30",
    "@types/log4js": "^2.3.5",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.18",
    "chai": "^4.1.2",
    "chai-change": "^2.1.2",
    "chance": "^1.0.6",
    "concurrently": "^4.1.0",
    "dirty-chai": "^2.0.1",
    "factory-girl": "^4.0.0",
    "listr": "^0.11.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.2.1",
    "replace-in-file": "^2.5.0",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  }
}
