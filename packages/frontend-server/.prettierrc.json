{
    "singleQuote": true,
    "printWidth": 120,
    "semi": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "tabWidth": 4,
    "overrides": [
        {
            "files": ["**/*.js"],
            "options": {
                "parser": "flow",
                "trailingComma": "es5"
            }
        },
        {
            "files": ["**/.*rc"],
            "options": {
                "parser": "json"
            }
        },
        {
            "files": ["package.json"],
            "options": {
                "printWidth": 240
            }
        }
    ]
}
