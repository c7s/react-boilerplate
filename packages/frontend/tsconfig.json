{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "module": "esnext"
    },
    "include": ["src", "@types", "config"]
}
